# ============================================================
# FocusGuard - Environment Configuration
# ============================================================
# Copy this file to .env and modify the values as needed:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# ============================================================

# ==================== SECURITY ====================
# JWT Secret Key - MUST change in production!
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_TO_A_RANDOM_SECRET_KEY

# ==================== SERVER ====================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Debug mode (set to false in production)
DEBUG=true

# ==================== DATABASE ====================
# SQLite database path (relative to server/ directory)
# For PostgreSQL (future): postgresql://user:pass@localhost:5432/focusguard
DATABASE_PATH=server/focusguard.db

# ==================== CORS ====================
# Comma-separated list of allowed origins
# Use * for development only, specify exact origins in production
# Example: http://localhost:3000,http://localhost:8000,https://your-domain.com
CORS_ORIGINS=*

# ==================== CLIENT ====================
# Server URL for client to connect to
CLIENT_SERVER_URL=http://localhost:8000

# Camera device index (0 = default webcam)
CAMERA_INDEX=0
